{
  "name": "phi-react",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.2.5",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.19.3",
    "@types/react": "^16.9.55",
    "@types/react-dom": "^16.9.9",
    "graphql": "^15.4.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.0",
    "typescript": "^4.0.5",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start:js": "react-scripts start",
    "build:js": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build:css": "postcss ./src/styles/main.css -o ./src/styles/_main.dist.css",
    "start:css": "npm run build:css -- --watch",
    "build": "run-s build:codegen build:css build:js",
    "start": "run-p start:codegen start:css start:js",
    "fmt": "prettier --write './src/**/*.{html,css,js,jsx,ts,tsx}'",
    "gql:get-schema": "apollo client:download-schema schema.graphql",
    "build:codegen": "apollo client:codegen --target typescript",
    "start:codegen": "npm run build:codegen -- --watch"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "apollo": "^2.31.0",
    "http-proxy-middleware": "^1.0.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.4",
    "postcss-cli": "^8.1.0",
    "postcss-import": "^13.0.0",
    "prettier": "^2.1.2",
    "tailwindcss": "^1.9.6"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
